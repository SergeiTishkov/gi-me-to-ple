{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@utils/*": ["utils/*"]
    },
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}